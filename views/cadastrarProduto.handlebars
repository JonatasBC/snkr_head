<link rel='stylesheet' href='/css/produtos.css' />
<div class='tela'>
  <h2>Cadastrar Produtos</h2>
  <br />
  <div class='desc back'>
    <form action='/cadastrarProduto' method='post'>
      <label for='nome'>Nome do Produto:</label><br />
      <input type='text' name='nome' placeholder='Nome do Tênis' /><br />
      <label for='marca'>Marca do Produto:</label><br />
      <input type='text' name='marca' placeholder='Marca' /><br />
      <label for='tamanho'>Tamanho do Produto:</label><br />
      <input type='text' name='tamanho' placeholder='Tamanho' /><br />
      <label for='quantidadeEstoque'>Quantidade do Produto:</label><br />
      <input type='text' name='quantidadeEstoque' placeholder='quantidade' /><br />
      <label for='preco'>Preço do Produto:</label><br />
      <input type='text' name='preco' placeholder='Preço' />
      <br /><br />
      <button type='submit'>Cadastrar</button>
    </form>
    {{#if msg}}
      <p>{{msg}}</p>
    {{/if}}
    {{#if msgB}}
      <p>{{msgB}}</p>
    {{/if}}
  </div>
</div>