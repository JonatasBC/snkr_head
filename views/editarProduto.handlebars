<div class='tela'>
  <link rel='stylesheet' href='/css/produtos.css' />
  <div class=''>
    <h2>Consultar Produto</h2>
    <div class='desc back'>
      <form action='/consultaProduto' method='post'>
        <label for='nome'>Nome do Produto:</label><br />
        <input type='text' name='nome' placeholder='Nome Tênis' /><br />
        <br />
        <button type='submit'>Consultar</button>
      </form>
      <br />
    </div>
  </div>
  <table>
    <thead>
      <th>Id</th>
      <th>Nome</th>
      <th>Marca</th>
      <th>Tamanho</th>
      <th>Quantidade Estoque</th>
      <th>Preço R$</th>
    </thead>
    <tbody>
      {{#each dados}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.nome}}</td>
          <td>{{this.marca}}</td>
          <td>{{this.tamanho}}</td>
          <td>{{this.quantidadeEstoque}}</td>
          <td>{{this.preco}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <div class='tela'>
    <br />
  </div>
  <div class=''>
    <h2>Atualização do Produto</h2>
    <br />
    <div class='desc back'>
      <form action='/editarProduto' method='post'>
        <div class='btns'>
          <div>
            <label for='id'>Id do Produto:</label><br />
            <input type='text' name='id' placeholder='Id' /><br />
            <label for='nome'>Nome do Produto:</label><br />
            <input type='text' name='nome' placeholder='Nome' /><br />
            <label for='marca'>Marca do Produto:</label><br />
            <input type='text' name='marca' placeholder='Marca' /><br />
            <label for='tamanho'>Tamanho do Produto:</label><br />
            <input type='number' name='tamanho' placeholder='Tamanho' /><br />
          </div>
          <div>
            <label for='quantidadeEstoque'>Quantidade do Produto:</label><br />
            <input type='number' name='quantidadeEstoque' placeholder='Quantidade' /><br />
            <label for='preco'>Preço do Produto:</label><br />
            <input type='text' name='preco' placeholder='Preço' /><br />
            <br />
            <button type='submit'>Atualizar</button>
          </div>
        </div>
      </form>
      {{#if msg}}
        <p>{{msg}}</p>
      {{/if}}
      {{#if msgB}}
        <p>{{msgB}}</p>
      {{/if}}
    </div>
  </div>
</div>