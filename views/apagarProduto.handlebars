<div class='tela'>
  <link rel='stylesheet' href='/css/produtos.css' />
  <div class=''>
    <h2>Consultar Produto</h2>
    <br />
    <div class='desc back'>
      <form action='/consultaBProduto' method='post'>
        <label for='nome'>Nome do Produto:</label><br />
        <input type='text' name='nome' placeholder='Nome do Tênis' /><br />
        <br />
        <button type='submit'>Enviar</button>
      </form>
      <br />
    </div>
    <table>
      <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Marca</th>
        <th>Qtde Estoque</th>
        <th>Preço R$</th>
      </thead>
      <tbody>
        {{#each dados}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.nome}}</td>
            <td>{{this.marca}}</td>
            <td>{{this.quantidadeEstoque}}</td>
            <td>{{this.preco}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class=''>
    <br />
    <h2>Exclusão do Produto</h2>
    <br />
    <form action='/apagarProduto' method='post'>
      <label for='id'>Id do Produto:</label><br />
      <input type='text' name='id' placeholder='Id' /><br />
      <br /><br />
      <button type='submit'>Enviar</button>
    </form>
    {{#if msg}}
      <p>{{msg}}</p>
    {{/if}}
    {{#if msgB}}
      <p>{{msgB}}</p>
    {{/if}}
  </div>
</div>