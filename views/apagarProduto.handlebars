<div class="tela">
    <div class="">
        <h2>Consultar Produto</h2>
        <div class="desc back">
            <form action="/consultaBProduto" method="post">
                <label for="nome">Nome do Produto:</label><br>
                <input type="text" name="nome" placeholder="Nome do Tênis"><br>
                <br>
                <button type="submit">Enviar</button>
            </form>
            <br>
        </div>
        <table>
            <thead>
                <th>Id</th>
                <th>Nome</th>
                <th>Cor</th>
                <th>Tipo</th>
                <th>Qtde Estoque</th>
                <th>Preço R$</th>
                <th>Descrição</th>
            </thead>
            <tbody>
        {{#each dados}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.nome}}</td>
                    <td>{{this.cor}}</td>
                    <td>{{this.tipo}}</td>
                    <td>{{this.quantidadeEstoque}}</td>
                    <td>{{this.precoUnitario}}</td>
                    <td>{{this.descricao}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
<div class="tela">
    <div class="">
        <br>
        <h2>Exclusão do Produto</h2>
        <br>
        <form action="/apagarProduto" method="post">
            <label for="id">Id do Produto:</label><br>
            <input type="text" name="id" placeholder="Id"><br>
            <br><br>
            <button type="submit">Enviar</button>
        </form>
        {{#if msg}}
            <p>{{msg}}</p>
        {{/if}} 
        {{#if msgB}}
            <p>{{msgB}}</p>
        {{/if}} 
    </div>
</div>